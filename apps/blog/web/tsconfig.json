{
  "extends": "../../../packages/typescript-config/nextjs.json",
  "compilerOptions": {
    "moduleResolution": "Bundler", // 이 부분을 추가하여 상속받은 값을 덮어씁니다.
    "paths": {
      "#site/content": ["./.velite"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.ts",
    ".next/types/**/*.ts",
    ".velite"
  ],

  "exclude": ["node_modules", "velite.config.ts"]
}
